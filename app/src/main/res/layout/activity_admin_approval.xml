<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminApproval">

    <ImageView
        android:id="@+id/logoview"
        android:layout_width="186dp"
        android:layout_height="103dp"
        android:contentDescription="@string/LogoContentDescription"
        app:srcCompat="@drawable/companylogo"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/DenyHolButton"
        android:layout_width="128dp"
        android:layout_height="63dp"
        android:text="@string/Deny"
        tools:layout_editor_absoluteX="225dp"
        tools:layout_editor_absoluteY="316dp" />

    <Button
        android:id="@+id/ApproveHolButton"
        android:layout_width="128dp"
        android:layout_height="58dp"
        android:text="@string/Approve"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="321dp" />

    <Button
        android:id="@+id/RemoveReqButton"
        android:layout_width="135dp"
        android:layout_height="67dp"
        android:text="@string/Remove"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="618dp" />

    <ScrollView
        android:id="@+id/ApprovedContainer"
        android:layout_width="411dp"
        android:layout_height="67dp"
        tools:layout_editor_absoluteY="549dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <TextView
        android:id="@+id/ApprovedText"
        android:layout_width="133dp"
        android:layout_height="67dp"
        android:text="@string/Approved"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="474dp" />

    <ListView
        android:id="@+id/RequestsList"
        android:layout_width="357dp"
        android:layout_height="132dp"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="168dp" />

</androidx.constraintlayout.widget.ConstraintLayout>